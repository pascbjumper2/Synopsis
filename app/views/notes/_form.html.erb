<% if @note.errors.any? %>
    <ul>
      <%= @note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<%= form_for @note do |f| %>
    <div>
      <%= f.label :title %>
    </div>
    <div>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %>
    </div>
    <div>
      <%= f.cktext_area :body, rows: 10 %>
    </div>
    <div>
      <%= f.submit %>
    </div>

    <% if user_signed_in? %><%= current_user.name.capitalize %><% end %>

    <% current_user.name :host %>

<% end %>